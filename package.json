{
  "name": "@creditkarma/thrift-server",
  "version": "0.0.1",
  "description": "Thrift core library in TypeScript",
  "main": "./dist/index.js",
  "scripts": {
    "build": "lerna exec -- npm run build",
    "clean": "rimraf **/node_modules **/dist **/coverage **/generated",
    "lint": "lerna exec -- npm run lint",
    "updated": "lerna updated",
    "postinstall": "lerna bootstrap",
    "prebootstrap": "npm install",
    "pretest": "lerna exec -- npm run build",
    "test": "lerna exec -- npm run test",
    "test-integration": "lerna run -- test-integration",
    "release:patch": "npm version patch && npm run release:push",
    "release:minor": "npm version minor && npm run release:push",
    "release:major": "npm version major && npm run release:push",
    "release:push": "git push --follow-tags",
    "release:publish": "lerna publish"
  },
  "keywords": [
    "Thrift",
    "TypeScript"
  ],
  "author": "Credit Karma",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/creditkarma/thrift-server"
  },
  "devDependencies": {
    "@types/code": "^4.0.3",
    "@types/debug": "0.0.30",
    "@types/lab": "^11.1.0",
    "@types/node": "^8.0.23",
    "code": "^4.1.0",
    "lab": "^14.2.0",
    "lerna": "^2.1.0",
    "rimraf": "^2.6.1",
    "tslint": "^5.6.0",
    "tslint-eslint-rules": "^4.1.1",
    "typescript": "^2.5.3",
    "watch": "^1.0.2"
  }
}
