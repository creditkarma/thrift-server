{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "../",
    "baseUrl": "../",
    "noEmitOnError": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "pretty": true,
    "removeComments": true,
    "paths": {
      "thrift": [
        "./node_modules/@creditkarma/thrift-typescript/typings/thrift.d.ts"
      ]
    },
    "types": [
      "@types/node",
      "@types/express",
      "@types/request"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
