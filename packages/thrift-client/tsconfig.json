{
    "compilerOptions": {
        "lib": ["ES2021"],
        "target": "es2021",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "noEmitOnError": true,
        "strict": true,
        "noUnusedLocals": true,
        "pretty": true,
        "removeComments": true,
        "esModuleInterop": true,
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
