{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "rootDir": ".",
    "outDir": "./dist",
    "baseUrl": "./",
    "noEmitOnError": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": true,
    "pretty": true,
    "removeComments": true,
    "paths": {
      "thrift": [
        "./typings/thrift"
      ]
    },
    "types": [
      "@types/node",
      "@types/express",
      "@types/request"
    ]
  },
  "files": [
    "./src/index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
