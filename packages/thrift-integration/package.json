{
    "name": "@creditkarma/thrift-integration",
    "version": "0.11.0-alpha.1",
    "description": "Integration tests for thrift-server packages",
    "scripts": {
        "clean": "rimraf dist",
        "lint": "tslint --fix './src/**/*.ts'",
        "format": "prettier --write 'src/**/*.ts'",
        "codegen-ts": "thrift-typescript --target thrift-server --rootDir ./src --sourceDir ./thrift --outDir ./generated",
        "codegen-apache": "thrift-typescript --target apache --rootDir ./src --sourceDir ./thrift --outDir ./generated-apache",
        "codegen": "npm run codegen-ts && npm run codegen-apache",
        "prebuild": "npm run clean && npm run lint && npm run format && npm run codegen",
        "build": "tsc",
        "pretest": "npm run build",
        "test": "npm run test:only",
        "test:only": "DEBUG=true lab --timeout 60000 --verbose -l -S -P spec dist"
    },
    "devDependencies": {
        "@creditkarma/dynamic-config": "^0.9.2",
        "@creditkarma/thrift-client": "^0.11.0-alpha.1",
        "@creditkarma/thrift-client-context-filter": "^0.11.0-alpha.1",
        "@creditkarma/thrift-client-timing-filter": "^0.11.0-alpha.1",
        "@creditkarma/thrift-client-ttwitter-filter": "^0.11.0-alpha.1",
        "@creditkarma/thrift-client-zipkin-filter": "^0.11.0-alpha.1",
        "@creditkarma/thrift-server-core": "^0.11.0-alpha.1",
        "@creditkarma/thrift-server-express": "^0.11.0-alpha.1",
        "@creditkarma/thrift-server-hapi": "^0.11.0-alpha.1",
        "@creditkarma/thrift-typescript": "^3.0.3-0",
        "@creditkarma/zipkin-core": "^0.11.0-alpha.1",
        "@creditkarma/zipkin-tracing-express": "^0.11.0-alpha.1",
        "@creditkarma/zipkin-tracing-hapi": "^0.11.0-alpha.1",
        "@types/body-parser": "^1.16.5",
        "@types/code": "^4.0.4",
        "@types/express": "^4.16.0",
        "@types/hapi": "^17.0.18",
        "@types/node": "^8.10.38",
        "@types/request": "^2.48.1",
        "@types/request-promise-native": "^1.0.15",
        "@types/thrift": "^0.10.7",
        "body-parser": "^1.18.3",
        "code": "^5.2.0",
        "express": "^4.16.4",
        "hapi": "^17.5.3",
        "lab": "^18.0.0",
        "prettier": "^1.15.1",
        "request": "^2.88.0",
        "request-promise-native": "^1.0.5",
        "rimraf": "^2.6.2",
        "thrift": "^0.11.0",
        "tslint": "^5.11.0",
        "tslint-config-prettier": "^1.15.0",
        "tslint-plugin-prettier": "^2.0.0",
        "typescript": "3.1.x"
    },
    "publishConfig": {
        "access": "private"
    }
}
