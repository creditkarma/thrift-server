{
    "name": "@creditkarma/thrift-integration",
    "version": "1.0.4",
    "description": "Integration tests for thrift-server packages",
    "scripts": {
        "clean": "rimraf dist",
        "lint": "tslint --fix './src/**/*.ts'",
        "format": "prettier --write 'src/**/*.ts'",
        "codegen-ts": "thrift-typescript --target thrift-server --rootDir ./src --sourceDir ./thrift --outDir ./generated",
        "codegen-strict": "thrift-typescript --target thrift-server --strictUnions --rootDir ./src --sourceDir ./thrift --outDir ./generated-strict",
        "codegen-apache": "thrift-typescript --target apache --rootDir ./src --sourceDir ./thrift --outDir ./generated-apache",
        "codegen": "npm run codegen-ts && npm run codegen-strict && npm run codegen-apache",
        "prebuild": "npm run clean && npm run lint && npm run format && npm run codegen",
        "build": "tsc",
        "pretest": "npm run build",
        "test": "npm run test:only",
        "test:only": "DEBUG=true lab --timeout 60000 --verbose -l -S -P spec ../../dist"
    },
    "publishConfig": {
        "access": "restricted"
    }
}
