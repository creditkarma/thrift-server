  "devDependencies": {
    "@types/code": "^4.0.3",
    "@types/debug": "0.0.30",
    "@types/lab": "^11.1.0",
    "@types/node": "^8.0.31",
    "@types/q": "^1.0.5",
    "@types/rimraf": "0.0.28",
    "body-parser": "^1.17.2",
    "code": "^4.1.0",
    "express": "^4.16.0",
    "lab": "^14.2.0",
    "lerna": "^2.0.0",
    "rimraf": "^2.6.2",
    "tslint": "^5.6.0",
    "tslint-eslint-rules": "^4.1.1",
    "typescript": "2.8.x"
  },
  "dependencies": {
