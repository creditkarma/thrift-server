{
  "name": "@creditkarma/thrift-server-core",
  "version": "0.0.15",
  "description": "Thrift core library in TypeScript",
  "main": "./dist/main/index.js",
  "types": "./dist/main/index.d.ts",
  "files": [
    "./dist"
  ],
  "scripts": {
    "build": "npm run clean && npm run lint && npm run compile",
    "compile": "tsc",
    "clean": "rimraf ./dist",
    "prepublish": "npm run build && rimraf ./dist/tests",
    "watch": "npm run build -- --watch",
    "start": "npm run build && node dist/server.js",
    "test": "npm run test:only --",
    "test:watch": "watch 'npm run test:only' ./dist",
    "test:only": "lab --verbose -l -S ./dist/**/*.spec.js",
    "lint": "tslint --fix './src/**/*.ts'"
  },
  "keywords": [
    "Thrift",
    "TypeScript"
  ],
  "author": "Credit Karma",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/creditkarma/thrift-server/tree/master/packages/thrift-server-core"
  },
  "dependencies": {
    "thrift": "^0.10.0",
    "typescript": "^2.5.3"
  },
  "devDependencies": {
    "@types/code": "^4.0.3",
    "@types/debug": "0.0.30",
    "@types/lab": "^11.1.0",
    "@types/node": "^8.0.31",
    "@types/rimraf": "0.0.28",
    "@types/thrift": "0.10.3",
    "body-parser": "^1.17.2",
    "code": "^4.1.0",
    "express": "^4.15.3",
    "lab": "^14.2.0",
    "lerna": "^2.0.0",
    "rimraf": "^2.5.4",
    "tslint": "^5.6.0",
    "tslint-eslint-rules": "^4.1.1"
  }
}
