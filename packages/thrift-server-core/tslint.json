{
    "extends": "tslint:recommended",
    "rules": {
        "variable-name": false,
        "only-arrow-functions": false,
        "max-classes-per-file": false,
        "max-line-length": false,
        "no-empty": false,
        "no-bitwise": false,
        "object-literal-sort-keys": false,
        "no-console": false,
        "no-var-requires": false,
        "array-type": [
            true,
            "generic"
        ],
        "semicolon": [
            true,
            "never"
        ],
        "quotemark": [
            true,
            "single",
            "avoid-escape"
        ]
    }
}
