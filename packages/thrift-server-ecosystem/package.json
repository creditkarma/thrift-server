{
    "name": "@creditkarma/thrift-server-ecosystem",
    "version": "1.1.0-alpha.0",
    "description": "Example services built on thrift-server",
    "scripts": {
        "clean": "npm run clean-dist && npm run clean-gen",
        "clean-dist": "rimraf ./dist",
        "clean-gen": "rimraf ./src/generated",
        "lint": "tslint --fix './src/**/*.ts'",
        "format": "prettier --write 'src/**/*.ts'",
        "codegen": "thrift-typescript --target thrift-server --rootDir . --sourceDir ./thrift --outDir ./src/generated",
        "prebuild": "npm run clean && npm run lint && npm run format && npm run codegen",
        "build": "tsc",
        "test": "npm run test:only",
        "test:only": "echo 'No tests for thrift ecosystem'; exit 0;"
    },
    "dependencies": {
        "@types/node": "^16.11.0"
    },
    "devDependencies": {
        "@creditkarma/dynamic-config": "^1.0.0",
        "@creditkarma/thrift-client": "^1.1.0-alpha.0",
        "@creditkarma/thrift-client-zipkin-filter": "^1.1.0-alpha.0",
        "@creditkarma/thrift-server-core": "^1.1.0-alpha.0",
        "@creditkarma/thrift-server-express": "^1.1.0-alpha.0",
        "@creditkarma/thrift-server-hapi": "^1.1.0-alpha.0",
        "@creditkarma/thrift-typescript": "^3.7.6",
        "@creditkarma/zipkin-tracing-express": "^1.1.0-alpha.0",
        "@creditkarma/zipkin-tracing-hapi": "^1.1.0-alpha.0",
        "@hapi/hapi": "^20.0.0",
        "@types/express": "^4.16.0",
        "@types/hapi__hapi": "^20.0.0",
        "express": "^4.16.4",
        "prettier": "^1.15.2",
        "tslint": "^5.11.0",
        "tslint-config-prettier": "^1.15.0",
        "tslint-plugin-prettier": "^2.0.0",
        "typescript": "4.6.x"
    },
    "publishConfig": {
        "access": "private"
    }
}
