{
  "name": "@creditkarma/thrift-server-express",
  "version": "0.0.1",
  "description": "Thrift core library in TypeScript",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "prebuild": "npm run test:codegen",
    "build": "npm run clean && npm run lint && tsc",
    "clean": "rm -rf ./dist",
    "watch": "npm run build -- --watch",
    "start": "npm run build && node dist/server.js",
    "pretest": "npm run build",
    "test": "npm run test:only --",
    "test:codegen": "rimraf ./src/tests/generated; thrift-typescript --rootDir ./src/tests --sourceDir ./thrift --outDir ./generated",
    "test:watch": "watch 'npm run test:only' ./dist",
    "test:only": "lab -l -S ./dist/**/*.spec.js",
    "lint": "tslint --fix './src/**/*.ts'",
    "prepublish": "rimraf ./dist/tests/"
  },
  "keywords": [
    "Thrift",
    "TypeScript"
  ],
  "author": "Credit Karma",
  "license": "Apache-2.0",
  "devDependencies": {
    "@creditkarma/thrift-typescript": "^0.0.7",
    "@types/code": "^4.0.3",
    "@types/debug": "0.0.30",
    "@types/express": "^4.0.37",
    "@types/lab": "^11.1.0",
    "@types/node": "^8.0.23",
    "@types/rimraf": "0.0.28",
    "@types/thrift": "0.10.1",
    "body-parser": "^1.17.2",
    "code": "^4.1.0",
    "express": "^4.15.3",
    "lab": "^14.2.0",
    "lerna": "^2.0.0",
    "rimraf": "^2.5.4",
    "tslint": "^5.6.0",
    "tslint-eslint-rules": "^4.1.1"
  },
  "dependencies": {
    "@creditkarma/thrift-server-core": "0.0.1",
    "thrift": "^0.10.0",
    "typescript": "^2.5.3"
  }
}
