{
  "name": "thrift-server-express",
  "version": "0.0.1",
  "description": "Thrift core library in TypeScript",
  "main": "./dist/index.js",
  "scripts": {
    "build": "npm run clean && npm run lint && npm run compile",
    "compile": "tsc",
    "clean": "rm -rf ./dist",
    "prepublish": "npm run compile",
    "watch": "npm run build -- --watch",
    "start": "npm run build && node dist/server.js",
    "pretest": "npm run build",
    "test": "npm run test:only --",
    "test:watch": "watch 'npm run test:only' ./dist",
    "test:only": "lab  --coverage --sourcemaps ./dist/test",
    "lint": "tslint './src/**/*.ts'"
  },
  "keywords": [
    "Thrift",
    "TypeScript"
  ],
  "author": "Credit Karma",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/code": "^4.0.3",
    "@types/debug": "0.0.30",
    "@types/lab": "^11.1.0",
    "@types/node": "^8.0.23",
    "@types/rimraf": "0.0.28",
    "code": "^4.1.0",
    "lab": "^14.2.0",
    "body-parser": "^1.17.2",
    "express": "^4.15.3",
    "lerna": "^2.0.0",
    "rimraf": "^2.5.4",
    "tslint": "^5.6.0",
    "tslint-eslint-rules": "^4.1.1"
  },
  "dependencies": {
    "typescript": "^2.4.2",
    "thrift-server-core": "*"
  },
  "typings": "dist/index.d.ts",
  "typescript": {
    "definition": "dist/index.d.ts"
  }
}
