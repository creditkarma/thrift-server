{
  "name": "@creditkarma/thrift-server-hapi",
  "version": "0.4.0",
  "description": "A Hapi server plugin for the Apache Thrift protocol",
  "main": "dist/main/index.js",
  "types": "dist/main/index.d.ts",
  "files": [
    "dist/main"
  ],
  "keywords": [
    "Thrift",
    "Hapi",
    "TypeScript",
    "RPC"
  ],
  "scripts": {
    "clean": "rimraf ./dist ./src/tests/generated",
    "lint": "tslint --fix './src/**/*.ts'",
    "codegen": "thrift-typescript --target thrift-server --rootDir ./src/tests --sourceDir ./thrift --outDir ./generated",
    "prepublish": "npm run build",
    "prebuild": "npm run clean",
    "build": "npm run lint && tsc -p tsconfig.json",
    "prebuild:test": "npm run clean && npm run codegen",
    "build:test": "tsc -p tsconfig.test.json",
    "watch": "tsc --watch",
    "pretest": "npm run build:test",
    "test": "npm run test:only --",
    "test:watch": "watch 'npm run test:only' ./dist",
    "test:only": "lab --timeout 10000 --verbose -l -S ./dist/**/*.spec.js"
  },
  "author": "Credit Karma",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/creditkarma/thrift-server/tree/master/packages/thrift-server-hapi"
  },
  "peerDependencies": {
    "@creditkarma/thrift-server-core": "^0.4.0",
    "@types/hapi": "^16.1.10",
    "hapi": "^16.6.2"
  },
  "devDependencies": {
    "@creditkarma/thrift-client": "^0.4.0",
    "@creditkarma/thrift-server-core": "^0.4.0",
    "@creditkarma/thrift-typescript": "^1.0.2",
    "@types/code": "^4.0.3",
    "@types/hapi": "^16.1.10",
    "@types/lab": "^11.1.0",
    "@types/node": "^8.0.31",
    "@types/q": "^1.0.5",
    "@types/request": "^2.47.0",
    "code": "^4.1.0",
    "hapi": "^16.6.2",
    "lab": "^14.3.1",
    "request": "^2.83.0",
    "rimraf": "^2.6.2",
    "tslint": "^5.6.0",
    "tslint-eslint-rules": "^4.1.1",
    "typescript": "^2.6.2",
    "watch": "^1.0.2"
  }
}
