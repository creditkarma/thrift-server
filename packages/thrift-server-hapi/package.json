{
  "name": "@creditkarma/thrift-server-hapi",
  "version": "0.0.36",
  "description": "A Hapi server plugin for the Apache Thrift protocol",
  "main": "dist/main/index.js",
  "types": "dist/main/index.d.ts",
  "files": [
    "dist/main"
  ],
  "scripts": {
    "clean": "rimraf ./dist",
    "prepublish": "npm run build",
    "build": "npm run clean && npm run lint && tsc",
    "prebuild:test": "npm run clean && npm run test:codegen",
    "build:test": "tsc -p tsconfig.test.json",
    "watch": "tsc --watch",
    "start": "npm run build && node dist/main/server.js",
    "pretest": "npm run build:test",
    "test": "npm run test:only --",
    "test:codegen": "rimraf ./src/tests/generated && thrift-typescript --target thrift-server --rootDir ./src/tests --sourceDir ./thrift --outDir ./generated",
    "test:watch": "watch 'npm run test:only' ./dist",
    "test:only": "lab --verbose -l -S ./dist/**/*.spec.js",
    "lint": "tslint --fix './src/**/*.ts'"
  },
  "author": "Credit Karma",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/creditkarma/thrift-server/tree/master/packages/thrift-server-hapi"
  },
  "dependencies": {
    "@creditkarma/thrift-server-core": "^0.0.36",
    "@types/hapi": "^16.1.8",
    "@types/node": "^8.0.31",
    "@types/node-int64": "^0.4.29",
    "@types/q": "^1.0.5",
    "@types/thrift": "^0.10.5",
    "hapi": "^16.1.2",
    "thrift": "^0.10.0"
  },
  "devDependencies": {
    "@creditkarma/thrift-typescript": "^0.0.16",
    "@creditkarma/thrift-client": "^0.0.36",
    "@types/code": "^4.0.3",
    "@types/lab": "^11.1.0",
    "@types/request": "^2.0.8",
    "code": "^4.1.0",
    "hapi": "^16.6.2",
    "lab": "^14.3.1",
    "request": "^2.83.0",
    "rimraf": "^2.6.2",
    "tslint": "^5.6.0",
    "tslint-eslint-rules": "^4.1.1",
    "typescript": "^2.6.1",
    "watch": "^1.0.2"
  }
}
