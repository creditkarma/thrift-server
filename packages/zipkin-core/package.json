{
    "name": "@creditkarma/zipkin-core",
    "version": "1.0.4",
    "description": "Shared utilities for Zipkin support in thrift-server packages",
    "main": "dist/main/index.js",
    "types": "dist/main/index.d.ts",
    "files": [
        "dist/main"
    ],
    "keywords": [],
    "scripts": {
        "clean": "rimraf ./dist",
        "lint": "tslint --fix './src/**/*.ts'",
        "format": "prettier --write 'src/**/*.ts'",
        "prebuild": "npm run clean && npm run lint && npm run format",
        "build": "tsc",
        "test": "npm run test:only",
        "test:only": "lab --timeout 15000 --verbose -l -S -P spec ../../dist/packages/zipkin-core/src/tests/unit"
    },
    "peerDependencies": {
        "@creditkarma/thrift-server-core": "^1.0.0"
    },
    "publishConfig": {
        "access": "public"
    },
    "nx": {
        "targets": {
          "test": {
            "dependsOn": ["build"]
          }
        }
      }
}
