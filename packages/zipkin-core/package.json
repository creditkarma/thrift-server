{
    "name": "@creditkarma/zipkin-core",
    "version": "0.18.1-alpha.1",
    "description": "Shared utilities for Zipkin support in thrift-server packages",
    "main": "dist/main/index.js",
    "types": "dist/main/index.d.ts",
    "files": [
        "dist/main"
    ],
    "keywords": [],
    "scripts": {
        "clean": "rimraf ./dist",
        "lint": "tslint --fix './src/**/*.ts'",
        "format": "prettier --write 'src/**/*.ts'",
        "prebuild": "npm run clean && npm run lint && npm run format",
        "build": "tsc",
        "test": "npm run test:only",
        "test:only": "lab --timeout 15000 --verbose -l -S -P spec dist/tests/unit"
    },
    "dependencies": {
        "@types/bytebuffer": "^5.0.36",
        "bytebuffer": "^5.0.1",
        "zipkin": "^0.15.0",
        "zipkin-transport-http": "^0.14.2"
    },
    "peerDependencies": {
        "@creditkarma/thrift-server-core": "0.18.1-alpha.0"
    },
    "devDependencies": {
        "@creditkarma/thrift-server-core": "^0.18.1-alpha.1",
        "@hapi/code": "^8.0.7",
        "@hapi/lab": "^25.0.1",
        "@types/hapi__code": "^8.0.1",
        "@types/hapi__lab": "^18.1.0",
        "@types/node": "^16.11.0",
        "prettier": "^1.18.2",
        "rimraf": "^2.6.2",
        "tslint": "^5.11.0",
        "tslint-config-prettier": "^1.15.0",
        "tslint-plugin-prettier": "^2.0.0",
        "typescript": "4.6.x"
    }
}
