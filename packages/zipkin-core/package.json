{
    "name": "@creditkarma/zipkin-core",
    "version": "0.14.0",
    "description": "Shared utilities for Zipkin support in thrift-server packages",
    "main": "dist/main/index.js",
    "types": "dist/main/index.d.ts",
    "files": [
        "dist/main"
    ],
    "keywords": [],
    "scripts": {
        "clean": "rimraf ./dist",
        "lint": "tslint --fix './src/**/*.ts'",
        "format": "prettier --write 'src/**/*.ts'",
        "prebuild": "npm run clean && npm run lint && npm run format",
        "build": "tsc",
        "test": "npm run test:only",
        "test:only": "lab --timeout 15000 --verbose -l -S -P spec dist/tests/unit"
    },
    "dependencies": {
        "@types/bytebuffer": "^5.0.36",
        "bytebuffer": "^5.0.1",
        "zipkin": "^0.15.0",
        "zipkin-transport-http": "^0.14.2"
    },
    "peerDependencies": {
        "@creditkarma/thrift-server-core": "0.13.x"
    },
    "devDependencies": {
        "@creditkarma/thrift-server-core": "^0.14.0",
        "@hapi/code": "^5.3.0",
        "@hapi/lab": "^19.1.0",
        "@types/hapi__code": "^5.3.0",
        "@types/node": "^8.10.38",
        "prettier": "^1.18.2",
        "rimraf": "^2.6.2",
        "tslint": "^5.11.0",
        "tslint-config-prettier": "^1.15.0",
        "tslint-plugin-prettier": "^2.0.0",
        "typescript": "3.5.x"
    }
}
