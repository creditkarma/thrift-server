{
    "compilerOptions": {
        "lib": ["es2017"],
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "noEmitOnError": true,
        "strict": true,
        "noUnusedLocals": true,
        "pretty": true,
        "removeComments": true,
        "typeRoots": ["./node_modules/@types", "./typings"]
    },
    "exclude": [
        "node_modules",
        "dist",
        "example"
    ]
}
